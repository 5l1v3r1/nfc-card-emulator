<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CardSelectionActivity">

    <TextView
        android:id="@+id/lbl_cardListHeadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/card_list_headline"
        android:textColor="@color/colorDark"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spn_cardSort"
        android:layout_width="161dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/lbl_cardSort"
        android:layout_alignBottom="@+id/lbl_cardSort"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="34dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/lbl_cardSort" />

    <TextView
        android:id="@+id/lbl_cardSort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbl_cardListHeadline"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/lbl_cardSort"
        android:textColor="@color/colorDark"
        android:textSize="20sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcl_cardList"
        android:layout_width="match_parent"
        android:layout_height="589dp"
        android:layout_below="@id/lbl_cardListHeadline"
        android:layout_marginStart="8dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp" >

    </android.support.v7.widget.RecyclerView>

    <ProgressBar
        android:id="@+id/prg_locationCardSelection"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

</RelativeLayout>